<% include('app/layout') %>

<% block('content') %>
<div class="container">
  <h1>Video Details</h1>

  <h2>Title: <%= video.title %></h2>
  <p>Tags: <%= video.tags %></p>
  <p>Comment: <%= video.comment %></p>

  <% if (video.videoPath) { %>
    <video controls>
      <source src="<%= video.videoPath %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  <% } %>

  <a href="/videos" class="btn btn-primary">Back to Videos</a>
</div>
<% endblock %>
